@model Album
@{
    ViewBag.Title = "Album - " + Model.Title;
}

<section class="panel panel-default">
    <h2 class="panel-heading">Album: @Model.Title</h2>
    <div class="panel-body">
        <img src="@Model.AlbumArtUrl" alt="@Model.Title" />
    </div>
    <div class="panel-body" id="album-details">        
        <p><em>Genre:</em> @Model.Genre.Name</p>
        <p><em>Artist:</em> @Model.Artist.Name</p>
        <p><em>Price:</em> @String.Format("{0:F}", Model.Price)</p>         
    </div>
    <a class="btn btn-default" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-albumId="@Model.AlbumId">Add to cart</a>
</section>


