@model IEnumerable<Genre>

@{
    ViewBag.Title = "Store";
}
<style>
    #categories {
        display: none;
    }
</style>

<h3>Browse Genres</h3>
<p>
    Select from @Model.Count()
    genres:
</p>
<ul>
    @foreach (var genre in Model)
    {
        <li>
            <a asp-controller="Store" asp-action="Browse" asp-route-genre="@genre.Name">
                @genre.Name
            </a>
        </li>
    }
</ul>


