<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/Site.css" rel="stylesheet" type="text/css"/>
    <environment names="Development">
        <link href="/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <script src="/bower_components/jquery-1.11.1/dist/jquery.js" type="text/javascript"></script>
        <script src="/bower_components/modernizr/modernizr.js" type="text/javascript"></script>
        <script src="/bower_components/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
        <script src="/bower_components/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
    </environment>
    <environment names="Staging, Production">
        <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="https://musicstorecore2017.blob.core.windows.net/bowercomponents/bootstrap/dist/css/bootstrap.css" 
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position"/>
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js" 
                asp-fallback-src="https://musicstorecore2017.blob.core.windows.net/bowercomponents/jquery-1.11.1/dist/jquery.js" 
                asp-fallback-test="window.jQuery">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/modernizr/modernizr-2.8.3.js" 
                asp-fallback-src="https://musicstorecore2017.blob.core.windows.net/bowercomponents/modernizr/modernizr.js" 
                asp-fallback-test="">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js" 
                asp-fallback-src="https://musicstorecore2017.blob.core.windows.net/bowercomponents/jquery-validation/dist/jquery.validate.js" 
                asp-fallback-test="window.jQuery && window.jQuery.validator">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js" 
                asp-fallback-src="https://musicstorecore2017.blob.core.windows.net/bowercomponents/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" 
                asp-fallback-test="window.jQuery && window.jQuery.validator">
        </script>
    </environment>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">ASP.NET CORE 1.1 MUSIC STORE</a>
            </div>
            <div class="navbar-right">
                @await Component.InvokeAsync("CartSummary")
                @await Component.InvokeAsync("LoginLogout")
            </div>
        </div>
    </nav>   
    <div class="container">
        <div id="header">
            <img src="/Images/logo.png" alt="logo" />
            <ul id="navlist">
                <li class="first">
                    <a id="current" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a asp-controller="Store" asp-action="Index">Store</a>
                </li>
                <li>
                    <a asp-controller="StoreManager" asp-action="Index">Manager</a>
                </li>
                <li>
                    <a asp-controller="RoleAdmin" asp-action="Index">Admin</a>
                </li>
            </ul>
        </div>
        @await Component.InvokeAsync("GenreMenu")
        <div id="main">
            @RenderBody()
        </div>        
    </div>
    <div id="footer">
        This is an exercise by Jiancheng Zou
    </div>
</body>
</html>
